{
  "name": "xnt",
  "version": "2.0.0",
  "description": "hex notation tools",
  "main": "dist/xnt.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename xnt.umd.js",
    "build:umd.min": "webpack --output-filename xnt.umd.min.js -p",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "watch:test": "mocha --watch",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "lint": "eslint src/xnt.js",
    "validate": "npm-run-all --parallel lint test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ozipi/xnt.git"
  },
  "keywords": [
    "xnt",
    "notation"
  ],
  "files": [
    "dist"
  ],
  "author": "Oscar Valdez <ozipi.nomad@gmail.com> (http://ozipi.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ozipi/xnt/issues"
  },
  "homepage": "https://github.com/ozipi/xnt#readme",
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-loader": "6.2.4",
    "babel-plugin-istanbul": "1.0.3",
    "babel-preset-es2015": "6.9.0",
    "babel-register": "6.11.6",
    "chai": "3.5.0",
    "codecov": "1.0.1",
    "eslint": "3.2.0",
    "eslint-config-kentcdodds": "^9.0.0",
    "ghooks": "1.3.2",
    "json-loader": "0.5.4",
    "mocha": "3.0.0",
    "npm-run-all": "2.3.0",
    "nyc": "7.1.0",
    "rimraf": "2.5.4",
    "webpack": "1.13.1"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "function": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  },
  "dependencies": {
    "cross-env": "3.1.4"
  }
}
